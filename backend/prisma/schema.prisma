// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Language {
  he
  en
}

enum CardStatus {
  active
  used
}

enum IssuerEstablishmentType {
  physical
  online
  both
}

model User {
  id                        String   @id @default(uuid())
  email                     String   @unique
  passwordHash              String   @map("password_hash")
  phone                     String?
  name                      String?
  languagePreference        Language @default(he) @map("language_preference")
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")

  cards Card[]

  @@map("users")
}

model Issuer {
  id              String   @id @default(uuid())
  name            String
  nameHe          String?  @map("name_he")
  logoUrl         String?  @map("logo_url")
  brandColor      String?  @map("brand_color")
  notes           String?
  createdAt       DateTime @default(now()) @map("created_at")

  cards          Card[]
  establishments IssuerEstablishment[]

  @@map("issuers")
}

model Card {
  id                String     @id @default(uuid())
  userId            String     @map("user_id")
  issuerId          String     @map("issuer_id")
  label             String
  labelHe           String?    @map("label_he")
  codeLast4         String     @map("code_last4")
  fullCode          String?    @map("full_code") // Encrypted
  valueInitial      Float      @map("value_initial")
  valueCurrent      Float      @map("value_current")
  currency          String     @default("ILS")
  status            CardStatus @default(active)
  notes             String?
  photoUrl          String?    @map("photo_url")
  createdAt         DateTime   @default(now()) @map("created_at")
  updatedAt         DateTime   @updatedAt @map("updated_at")

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  issuer          Issuer          @relation(fields: [issuerId], references: [id])

  @@map("gift_cards")
}

model Establishment {
  id        String   @id @default(uuid())
  name      String
  nameHe    String?  @map("name_he")
  logoUrl   String?  @map("logo_url")
  createdAt DateTime @default(now()) @map("created_at")

  issuers IssuerEstablishment[]

  @@map("establishments")
}

model IssuerEstablishment {
  id              String    @id @default(uuid())
  issuerId        String    @map("issuer_id")
  establishmentId String    @map("establishment_id")
  type            IssuerEstablishmentType @default(both)
  notes           String?   // e.g., "Online only", "Excluding sale items"

  issuer        Issuer        @relation(fields: [issuerId], references: [id], onDelete: Cascade)
  establishment Establishment @relation(fields: [establishmentId], references: [id], onDelete: Cascade)

  @@unique([issuerId, establishmentId])
  @@map("issuer_establishments")
}

