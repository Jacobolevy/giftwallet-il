// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Language {
  he
  en
}

enum StoreAccessType {
  physical
  online
  both
}

model User {
  id                        String   @id @default(uuid())
  email                     String   @unique
  passwordHash              String?  @map("password_hash")
  googleId                  String?  @unique @map("google_id")
  avatarUrl                 String?  @map("avatar_url")
  provider                  String?  @default("local")
  providerId                String?  @map("provider_id")
  phone                     String?
  name                      String?
  languagePreference        Language @default(he) @map("language_preference")
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")

  cards UserCard[]

  @@map("users")
}

model Issuer {
  id         String        @id @default(uuid())
  name       String
  websiteUrl String?       @map("website_url")
  logoUrl    String?       @map("logo_url")
  products   CardProduct[]

  @@map("issuers")
}

model CardProduct {
  id             String             @id @default(uuid())
  issuerId       String             @map("issuer_id")
  name           String
  description    String?
  sourceUrl      String             @default("") @map("source_url")
  lastVerifiedAt DateTime           @default(now()) @map("last_verified_at")

  issuer Issuer @relation(fields: [issuerId], references: [id], onDelete: Cascade)
  stores CardProductStore[]
  cards  UserCard[]

  @@unique([issuerId, name], map: "card_products_issuer_id_name_key")
  @@map("card_products")
}

model Store {
  id         String  @id @default(uuid())
  name       String
  category   String?
  websiteUrl String? @map("website_url")

  products CardProductStore[]

  @@map("stores")
}

model CardProductStore {
  cardProductId String          @map("card_product_id")
  storeId       String          @map("store_id")
  type          StoreAccessType @default(both)

  cardProduct CardProduct @relation(fields: [cardProductId], references: [id], onDelete: Cascade)
  store       Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@id([cardProductId, storeId])
  @@map("card_product_stores")
}

enum UserCardStatus {
  active
  used
}

model UserCard {
  id            String         @id @default(uuid())
  userId        String         @map("user_id")
  cardProductId String         @map("card_product_id")
  nickname      String?        @map("nickname")
  balance       Float          @default(0)
  expiresAt     DateTime?      @map("expires_at")
  status        UserCardStatus @default(active)

  codeLast4 String  @map("code_last4")
  fullCode  String? @map("full_code") // Encrypted

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  cardProduct CardProduct @relation(fields: [cardProductId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user_cards")
}

